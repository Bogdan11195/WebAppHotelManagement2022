@model IEnumerable<WebAppHotelManagement.ViewModels.RoomDetailsViewModel>

<table class="table table-sm" style="width: 100%">
    <thead>
        <tr class="bg-primary" style="color: white;">
            <th>
                Дія
            </th>
            <th>
                Зображення
            </th>
            <th>
                Номер кімнати
            </th>
            <th>
                Ціна номера
            </th>
            <th>
                Статус бронювання
            </th>
            <th>
                Тип номера
            </th>
            <th>
                Місткість номера
            </th>
            <th>
                Опис номера
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                <span id="btnDelete" class="glyphicon glyphicon-trash" onclick="DeleteRoom(@item.RoomId)"></span> &nbsp;&nbsp;
                <span id="btnEdit" class="glyphicon glyphicon-pencil" onclick="EditRoom(@item.RoomId)"></span>
            </td>
            <td>
                <img src="@Url.Content("~/RoomImages/" + item.RoomImage)" width="50" height="50" class="img-responsive" />
            </td>
            <td>
                @item.RoomNumber
            </td>
            <td>
                @item.RoomPrice
            </td>
            <td>
                @item.BookingStatus
            </td>
            <td>
                @item.RoomType
            </td>
            <td>
                @item.RoomCapacity
            </td>
            <td>
                @item.RoomDescription
            </td>
        </tr>
        }
    </tbody>
</table>