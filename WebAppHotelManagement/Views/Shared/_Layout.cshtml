<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Готельний менеджмент</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<style>
    html {
        overflow: scroll;
    }


    header[role="banner"] #logo-main {
        display: block;
        margin: 20px auto;
    }

    #navbar-primary.navbar-default {
        background: transparent;
        border: none;
    }

        #navbar-primary.navbar-default .navbar-nav {
            width: 100%;
            text-align: center;
        }

            #navbar-primary.navbar-default .navbar-nav > li {
                display: inline-block;
                float: none;
            }

                #navbar-primary.navbar-default .navbar-nav > li > a {
                    padding-left: 30px;
                    padding-right: 30px;
                }
</style>


<header role="banner" style="width: 100%">
    <img id="logo-main" src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/32877/logo-thing.png" width="200" alt="Logo Thing main logo">
    <nav id="navbar-primary" class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-primary-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbar-primary-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Головна", "Index", "Home")</li>
                    <li class="active">@Html.ActionLink("Контакти", "Contact", "Home")</li>
                    <li class="active">@Html.ActionLink("Апартаменти", "Index", "Room")</li>
                    <li class="active">@Html.ActionLink("Бронювання", "Index", "Booking")</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
</header><!-- header role="banner" -->




    <div class="container body-content mt-lg-3">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Готельний менеджмент</p>
        </footer>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/additional-methods.min.js"></script>
</body>
</html>
